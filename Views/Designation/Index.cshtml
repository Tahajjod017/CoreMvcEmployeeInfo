@model Designation
@{
	ViewData["Title"] = "Designation";
}
<div width="100" class="container-fluid">
	<div class="row">
		<div class="col-12">
			<div class=" card">
				<div class=" card-header bg-white">
					<h3>Designation</h3>
				</div>
				<div class="card body">
					<form id="DesignationForm" asp-action="Save" method="post">
						<div class="row mt-4">
							<div class="col-10 mb-4 text-end">
								<button type="submit" class="btn btn-success me-2 ">Save</button>
								<button type="button" id="deleteBtn" class="btn btn-danger me-2">Delete</button>
								<button type="button" id="clear" class="btn btn-secondary me-2">Clear</button>
							</div>
						</div>
						<input type="hidden" asp-for="DesignationId" name="DesignationId" value="001" />
						<div class="row mt-3">
							<!--Left Collmn (Form Fields)-col-10-->
							<div class="col-10">
								<!--Raw 1: DesingnationId- Designation Name in the Same Row-->
								<div class="row mb-3">
									<div class="col-6">
										<div class="row">
											<label class="col-sm-4 col-form-label text-end">Designation ID</label>
											<div class="col sm-8">
												<input type="text" asp-for="DesignationId" class="form-control" value="001" />
											</div>
										</div>
									</div>
									<div class="col-md-6">
										<div class="row">
											<label class="col-sm-4 col-form-label text-end">Designation Name</label>
											<div class="col-sm-8">
												<input type="text" asp-for="DesignationName" class="form-control" />
											</div>
										</div>
									</div>
								</div>
								<!--Row-2-->
								<div class="row mb-3">
									<div class="col-6">
										<div class="row">
											<label class="col-sm-4 col-form-label text-end">Short Name</label>
											<div class="col col-sm-8">
												<input type="text" asp-for="DesingnationShortname" class="form-control" />
											</div>
										</div>
									</div>
								</div>
							</div>
								
						</div>
					</form>
					<!--Data Grid View-->
					<div class="table section">
						<div class="row mb-3">
							<div class=" col md-6">
								<div class="align-items-center">
									<span class="me-2">Grid Show:</span>
									<select class="form-select" style="width:80px;">
										<option>10</option>
										<option>25</option>
										<option>50</option>
										<option>100</option>
									</select>
									<span class="ms-2">entries</span>
								</div>
							</div>
							<div class="col-md-6">
								<div class="d-flex justify-content-end">
									<input type="text" class="form-control" placeholder="Search" style = "width:200px" />
								</div>
							</div>
						</div>
						<div class="table-responsive">
							<table class="table table-bordered">
								<thead class="table-light">
									<tr>
										<th class="text-center">DesignationID </th>
										<th class="text-center">DesignationName</th>
										<th class="text-center">Short Name</th>
									</tr>
								</thead>
								<tbody>
									<tr>
										<td>&nbsp;</td>
										<td>&nbsp;</td>
										<td>&nbsp;</td>
									</tr>
									<tr>
										<td>&nbsp;</td>
										<td>&nbsp;</td>
										<td>&nbsp;</td>
									</tr>
									<tr>
										<td>&nbsp;</td>
										<td>&nbsp;</td>
										<td>&nbsp;</td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
				</div>
				
			</div>
		</div>
	</div>
</div>